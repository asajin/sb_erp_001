{# src/Accounting/SuppliersProductsBundle/Resources/views/Default/product.html.twig #}
<div id="productNew">

    <form id="productForm">
        <div class="k-edit-form-container">
            <div class="k-edit-label"><label>Code:</label></div> 
            <div class="k-edit-field"><input class="k-input k-textbox" data-bind="value: code" /></div>
            <div class="k-edit-label"><label>Product Name:</label></div> 
            <div class="k-edit-field"><input class="k-input k-textbox" data-bind="value: name" /></div>
            <div class="k-edit-label"><label>Description :</label></div>  
            <div class="k-edit-field"><input class="k-input k-textbox" data-bind="value: description" /></div>
            <div class="k-edit-label"><label>Unit:</label></div> 
            <div class="k-edit-field"><input class="k-input k-textbox" data-bind="value: unit" /></div>
            <a class="k-button k-button-icontext k-grid-update" href="#" data-bind="click: save"><span class="k-icon k-update"></span>Save</a>
            <a class="k-button k-button-icontext k-grid-cancel" href="#" data-bind="click: cancel"><span class="k-icon k-cancel"></span>Cancel</a>
        </div>
    </form>
</div>